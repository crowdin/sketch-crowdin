{
  "name": "sketch-crowdin",
  "displayName": "Crowdin for Sketch",
  "description": "Localize the UI before programming starts. Translate and preview any design with ease",
  "publisher": "Crowdin",
  "version": "1.1.1",
  "engines": {
    "sketch": ">=3.0"
  },
  "keywords": [
    "Crowdin",
    "Localization"
  ],
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/crowdin/sketch-crowdin.git"
  },
  "skpm": {
    "name": "sketch-crowdin",
    "manifest": "src/manifest.json",
    "main": "sketch-crowdin.sketchplugin",
    "assets": [
      "assets/**/*"
    ]
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link"
  },
  "dependencies": {
    "@babel/polyfill": "^7.7.0",
    "@crowdin/crowdin-api-client": "1.5.0",
    "cheerio": "^1.0.0-rc.3"
  },
  "devDependencies": {
    "@skpm/builder": "^0.7.5"
  }
}
